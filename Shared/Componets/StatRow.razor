@inject Services.Game Game;
    
<tr>
    <th scope="row">@Key</th>
    <th scope="row">@Game.Player.Stats.GetStatCount(Key)</th>
    <th scope="row">@Game.Player.Stats.GetAllStatCount(Key)</th>
    <th scope="row">@getPercent()</th>
    <th scope="row">@getAllPercent()</th>
</tr>

@code {
    [Parameter]
    public string Key { get; set; }

    private string getPercent()
    {
        double total = Game.Player.Stats.GetStatCount(Data.StatData.RepairItem);
        double run = Game.Player.Stats.GetStatCount(Key);
        if (total == 0 || run == 0)
            return "0%";
        double amount = ((run / total) * 100);
        return amount.ToString("0.##")+"%";
    }

    private string getAllPercent()
    {
        double total = Game.Player.Stats.GetAllStatCount(Data.StatData.RepairItem);
        double run = Game.Player.Stats.GetAllStatCount(Key);
        if (total == 0 || run == 0)
            return "0%";
        double amount = ((run / total) * 100);
        return amount.ToString("0.##")+"%";
    }
}
